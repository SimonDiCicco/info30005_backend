            </figure>
        </div>
        <div class="userInformation">

            <h4><label>Interests:</label></h4>
            <!--id to be used to get data from server-->
            <textarea readonly id="userInterests" rows="4" cols="50">
                <%= user.Interests; %>

            </textarea>
            <h4><label>Experiences:</label></h4>
            <!--id to be used to get data from server-->
            <textarea readonly id="userExperience" rows="4" cols="50">
                <%= user.Experiences ;%>


