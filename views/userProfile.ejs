            <b><h3><%=jobs[i].title+", "+jobs[i].company%></h3></b><h4><%=jobs[i].description%><br> <h3>Workplace Rating:</h3></h4>
            <div class = "tileBackground"> <%=jobs[i].title.replace(/[a-z]/g, '').replace(/\s+/g,'');%> </div>
        </div>
        <%}%>
        <%}%>

    </div>


    <div class="User">
        <div class = "Details">
            <!--id to be used to get data from server-->
